	public class Basamak { 
	public static void main(String[] args) { 
	  
    int x=252;   

         System.out.println("x = " + x);  
	
	         if (x<10)  
	
	         System.out.println("x bir basamaklı bir tam sayıdır");  
	
	         else  
	
	             if (x<100)  
	
	                 System.out.println("x iki basamaklı bir tam sayıdır");  
	
	         else  
	
	             if (x<1000)  
	
	                System.out.println("x üç basamaklı bir tam sayıdır");  
	
	         else  
	
	            System.out.println("x üçten fazla basamaklı bir tam sayıdır");  
	} 
	
	}
